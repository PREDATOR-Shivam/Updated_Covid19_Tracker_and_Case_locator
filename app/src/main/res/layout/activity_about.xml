<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/about_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:elevation="20dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardCornerRadius="8dp">


                        <ImageView
                            android:id="@+id/covid-19"
                            android:src="@drawable/covid_symptoms"
                            android:layout_width="wrap_content"
                            android:layout_height="412dp"
                            android:onClick="openWeb"
                             />


            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="30dp"
                android:text="*If You Feel More Then Five Symptomps From Above Image. Please Click On Image to Inform the Authority Also Press The below given button to Mark yourself Positive."
                android:textColor="#696969"
                android:textSize="16sp" />
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I'am Positive"
                android:textColor="@color/red"
                android:onClick="openmap"

                />


        </LinearLayout>
    </ScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: v1.0.0"
        android:textColor="#696969"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>